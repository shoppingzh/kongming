{
  "name": "kongming-server",
  "version": "1.0.0",
  "description": "孔明工具箱服务端",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-kongming-server",
    "stop": "egg-scripts stop --title=egg-server-kongming-server",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test-local": "egg-bin test",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov",
    "tsc": "ets && tsc -p tsconfig.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "eslint .",
    "clean": "ets clean"
  },
  "dependencies": {
    "@forsigner/egg-typeorm": "^1.5.1",
    "egg": "^2.6.1",
    "egg-cors": "^2.2.3",
    "egg-router-plus": "^2.0.0",
    "egg-scripts": "^2.6.0",
    "mysql": "^2.18.1",
    "typeorm": "^0.3.11"
  },
  "devDependencies": {
    "@eggjs/tsconfig": "^1.0.0",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/supertest": "^2.0.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "egg-bin": "^4.11.0",
    "egg-ci": "^2.1.0",
    "egg-mock": "^3.16.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "ci": {
    "version": "14, 16, 18"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "eslintIgnore": [
    "coverage"
  ],
  "author": "xpzheng",
  "license": "MIT"
}
